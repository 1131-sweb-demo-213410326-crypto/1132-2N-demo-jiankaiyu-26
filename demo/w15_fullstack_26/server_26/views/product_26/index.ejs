<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <!-- public/style.css 映射到 /style.css -->
  <link rel="stylesheet" href="/style.css"/>
  <title><%= title %></title>
</head>
<body>
  <div style="text-align: center; margin: 2rem 0">
    <h2><%= title %></h2>
    <h4><%= name %>, <%= id %></h4>
  </div>

  <div class="products-container">
    <% data.forEach(item => { %>
      <div class="single-product">
        <% if (item.img) { %>
          <!-- public/product/images/xxx 映射到 /product-static/images/xxx -->
          <img
            src="/product-static/images/<%= item.img %>"
            alt="<%= item.title %>"
            class="single-product-img"
          />
        <% } %>
        <footer>
          <h3 class="name"><%= item.title %></h3>
          <span class="price">$<%= item.price %></span>
        </footer>
      </div>
    <% }); %>
  </div>
</body>
</html>





